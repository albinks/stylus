# Stylus Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here  # Optional

# Stability AI Configuration
STABILITY_API_KEY=your_stability_api_key_here

# Development Settings
DEBUG=false
LOG_LEVEL=INFO

# Comic Generation Settings
DEFAULT_STYLE=neo-noir
MAX_PAGES=10
GENERATION_TIMEOUT=600  # seconds

# Cache Settings
ENABLE_CACHE=true
CACHE_DIR=.cache/stylus

# Model Settings
DEFAULT_TEXT_MODEL=gpt-4
DEFAULT_IMAGE_MODEL=stable-diffusion-xl-base-1.0
MODEL_CACHE_DIR=model_cache/

# Output Settings
OUTPUT_DIR=output/
TEMP_DIR=temp_assets/
EXPORT_FORMAT=png  # png, pdf, both

# Performance Settings
MAX_CONCURRENT_REQUESTS=3
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
